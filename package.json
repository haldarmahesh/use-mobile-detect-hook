    "lint-fix": "./node_modules/eslint/bin/eslint.js --ext js,jsx src --fix",
    "format:check": "prettier --config ./.prettierrc --list-different \"src/**/*{.ts,.js,.json,.css,.scss}\"",
    "format:fix": "pretty-quick --staged",
    "build": "tsc"
  },
  "peerDependencies": {
    "react": "^16.7.0-alpha.0"
  },
  "files": [
    "src/index.js",
