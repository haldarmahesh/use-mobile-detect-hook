    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "husky": "1.1.2",
    "jest": "^26.6.3",
    "prettier": "1.14.3",
    "pretty-quick": "^1.8.0",
    "react": "^16.7.0-alpha.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "@types/jest": "^26.0.19"
  },
